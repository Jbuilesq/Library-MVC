@model Client

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Detalles del Cliente</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Correo Electrónico</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Número de Identificación (DNI)</dt>
                <dd class="col-sm-9">@Model.DNI</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary mt-3">Volver a la lista</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Editar</a>
        </div>
    </div>
</div>